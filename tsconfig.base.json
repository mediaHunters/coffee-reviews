{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "src",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "esModuleInterop": true,
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "noEmitOnError": true,
    "removeComments": true,
    "lib": [
      "ES2015",
      "es5",
      "es6",
      "dom"
    ],
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths" }
    ],
  },

}