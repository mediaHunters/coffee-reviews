{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "src",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "target": "es2020",
    "esModuleInterop": true,
    "module": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "noEmitOnError": true,
    "removeComments": true,
    "lib": [
      "ES2015",
      "es5",
      "es6",
      "dom",
      "ESNext" 
    ],
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths" }
    ],
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}