{
    "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "strict": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "allowJs": true,
      "lib": [
        "es5",
        "es6",
        "dom"
      ],
      "plugins": [
        { "transform": "@zerollup/ts-transform-paths" }
      ],
      "esModuleInterop": true
    },
    "ts-node": {
      "compilerOptions": {
        "module": "commonjs"
      }
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
    ]
  }
  